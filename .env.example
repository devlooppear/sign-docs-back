# Environment
ENVIRONMENT=local   # LOCAL | DEV | STAGING | PRODUCTION

# Database type
DB_TYPE=db_type     # postgres | mysql | mariadb | sqlite | mssql

# Full connection string (recommended for Postgres, MySQL, etc.)
DATABASE_URL=database_url

# Frontend URL (used for CORS in production)
FRONTEND_URL=frontend_url

# --- Alternative options (if you donâ€™t use DATABASE_URL) ---
DB_HOST=localhost
DB_PORT=db_port
DB_USERNAME=user
DB_PASSWORD=password
DB_NAME=db_name

# --- SQLite (when DB_TYPE=sqlite, use a file path instead of URL) ---
SQLITE_DATABASE=./database.sqlite
